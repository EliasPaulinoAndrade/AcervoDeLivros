<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/padding_page_default"
    android:paddingRight="@dimen/padding_page_default">
    <ImageView
        android:id="@+id/imgItem"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="centerCrop"
        android:layout_marginRight="5dp"
        android:src="@drawable/livrode">
    </ImageView>
    <TextView
        android:id="@+id/titleItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgItem"
        android:text="Elias Paulino"
        android:paddingLeft="15dp"
        android:textStyle="bold"
        android:textColor="@color/secWhite"
        android:textSize="@dimen/H4"
        android:layout_alignBottom="@id/imgItem"/>
    <TextView
        android:id="@+id/postTxt"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/titleItem"
        android:textColor="@color/firstBlue"
        android:textSize="@dimen/H4"
        android:layout_alignBottom="@id/imgItem"
        android:text="Atrasou a Entrega do Livro"
        android:maxLines="1"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/lastTxt"
        android:paddingLeft="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/postTxt"
        android:textColor="@color/firstBlue"
        android:textSize="@dimen/H4"
        android:text="'wefweasdsaddad'"
        android:layout_alignBottom="@id/imgItem"
        android:maxLines="1"
        android:ellipsize="end"/>
    <ImageView
        android:id="@+id/closeSelect"
        android:visibility="invisible"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/close"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/imgItem"/>
</RelativeLayout>