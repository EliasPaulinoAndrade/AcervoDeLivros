<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/firstGray"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/padding_page_default"
    android:paddingRight="@dimen/padding_page_default"
    android:paddingTop="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgItem"
        android:layout_width="@dimen/livros_livro_image_square"
        android:layout_height="@dimen/livros_livro_image_square"
        android:layout_marginRight="15dp"
        android:src="@drawable/defaultlivro"
        app:civ_border_color="@color/white"
        app:civ_border_width="0dp" />

    <TextView
        android:id="@+id/titleItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgItem"
        android:text=""
        android:textColor="@color/secWhite"
        android:textSize="@dimen/livros_livro_title" />

    <TextView
        android:id="@+id/subTitleItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleItem"
        android:layout_toRightOf="@+id/imgItem"
        android:text=""
        android:maxLines="4"
        android:ellipsize="end"
        android:textColor="@color/firstBlue"
        android:textSize="@dimen/livros_livro_subtitle" />
    <TextView
        android:id="@+id/livroTags"
        android:layout_toRightOf="@id/imgItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/secBlue"
        android:layout_below="@id/subTitleItem"
        android:text=""
        android:maxLength="70"
        android:maxLines="1"
        android:ellipsize="end"/>
</RelativeLayout>