<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/secGray">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.elias.acervoapp.Inicio">
        <ImageView
            android:id="@+id/logoImg"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/coruja">
        </ImageView>
        <TextView
            android:id="@+id/logoTxt"
            android:textColor="@color/secWhite"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/logoImg"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="ACERVO"/>

        <TableLayout
            android:id="@+id/options"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:stretchColumns="*"
            android:layout_below="@+id/logoTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">
            <TableRow>
                <com.example.elias.acervoapp.uiimplementacoes.FrameSquareLayout
                    android:onClick="showLivros"
                    android:layout_width="0dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/thirdGray">
                    <TextView
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Livros"
                        android:textColor="@color/white"
                        android:textSize="20dp">
                    </TextView>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_widthPercent="40%"
                        app:layout_heightPercent="40%"
                        android:src="@drawable/busca"
                        android:layout_gravity="center"/>
                </com.example.elias.acervoapp.uiimplementacoes.FrameSquareLayout>
                <com.example.elias.acervoapp.uiimplementacoes.FrameSquareLayout
                    android:onClick="showCategorias"
                    android:layout_width="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/thirdGray">
                    <TextView
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Categorias"
                        android:textColor="@color/white"
                        android:textSize="20dp">
                    </TextView>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_widthPercent="40%"
                        app:layout_heightPercent="40%"
                        android:src="@drawable/categorias"
                        android:layout_gravity="center"/>
                </com.example.elias.acervoapp.uiimplementacoes.FrameSquareLayout>
                <com.example.elias.acervoapp.uiimplementacoes.FrameSquareLayout
                    android:onClick="showAvisos"
                    android:layout_width="0dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/thirdGray">
                    <TextView
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avisos"
                        android:textColor="@color/white"
                        android:textSize="20dp">
                    </TextView>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_widthPercent="40%"
                        app:layout_heightPercent="40%"
                        android:src="@drawable/avisos"
                        android:layout_gravity="center"/>
                </com.example.elias.acervoapp.uiimplementacoes.FrameSquareLayout>
            </TableRow>
        </TableLayout>
        <RelativeLayout
            android:layout_below="@+id/options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/grafico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/firstGray">
                <com.example.elias.acervoapp.uiimplementacoes.GraficoPizza
                    android:layout_width="200dp"
                    app:centerColor="@color/firstGray"
                    app:raioInterno="70dp"
                    android:layout_gravity="center"
                    android:layout_height="200dp">
                    <com.example.elias.acervoapp.uiimplementacoes.GraficoSecao
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:secaoColor="@color/firstGreen"
                        app:qntNumber="70"/>
                    <com.example.elias.acervoapp.uiimplementacoes.GraficoSecao
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:secaoColor="@color/firstRed"
                        app:qntNumber="30"/>

                </com.example.elias.acervoapp.uiimplementacoes.GraficoPizza>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60\nLivros"
                    android:textSize="30dp"
                    android:textColor="@color/secWhite"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </FrameLayout>
            <LinearLayout
                android:layout_below="@+id/grafico"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/thirdGray"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:id="@+id/colorOpt"
                        android:background="@color/firstYellow">
                    </FrameLayout>
                    <TextView
                        android:layout_below="@id/colorOpt"
                        android:id="@+id/guardados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guardados"
                        android:textSize="15dp"
                        android:textColor="@color/secWhite"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50%"
                        android:textColor="@color/secWhite"
                        android:layout_below="@id/guardados"
                        android:layout_centerHorizontal="true"
                        android:textSize="25dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginLeft="2dp"
                    android:background="@color/thirdGray"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:id="@+id/colorOpt2"
                        android:background="@color/firstBlue">
                    </FrameLayout>
                    <TextView
                        android:layout_below="@id/colorOpt2"
                        android:id="@+id/guardados2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emprestados"
                        android:textSize="15dp"
                        android:textColor="@color/secWhite"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20%"
                        android:textColor="@color/secWhite"
                        android:layout_below="@id/guardados2"
                        android:layout_centerHorizontal="true"
                        android:textSize="25dp"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
