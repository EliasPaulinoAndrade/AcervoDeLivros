<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/secGray">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.elias.acervoapp.Inicio">
        <ImageView
            android:id="@+id/logoImg"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/d6"
            android:src="@drawable/coruja">
        </ImageView>
        <TextView
            android:id="@+id/logoTxt"
            android:textColor="@color/secWhite"
            android:textSize="@dimen/H1"
            android:layout_marginTop="@dimen/d2"
            android:layout_below="@+id/logoImg"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="@string/app_name" />
        <TableLayout
            android:id="@+id/options"
            android:layout_marginTop="@dimen/d2"
            android:layout_marginBottom="@dimen/d2"
            android:stretchColumns="*"
            android:layout_below="@+id/logoTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/d2"
            android:paddingLeft="@dimen/d2">
            <TableRow>
                <com.example.elias.acervoapp.uiimplementacoes.FrameSquareLayout
                    android:onClick="showLivros"
                    android:layout_width="0dp"
                    android:layout_marginRight="@dimen/d1"
                    android:background="@color/thirdGray">
                    <TextView
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/inicio_item_livros"
                        android:textColor="@color/white"
                        android:textSize="@dimen/inicio_item_title">
                    </TextView>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_widthPercent="40%"
                        app:layout_heightPercent="40%"
                        android:src="@drawable/livro"
                        android:layout_gravity="center"/>
                </com.example.elias.acervoapp.uiimplementacoes.FrameSquareLayout>
                <com.example.elias.acervoapp.uiimplementacoes.FrameSquareLayout
                    android:onClick="showCategorias"
                    android:layout_width="0dp"
                    android:layout_marginRight="@dimen/d1"
                    android:layout_marginLeft="@dimen/d1"
                    android:background="@color/thirdGray">
                    <TextView
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/inicio_item_categorias"
                        android:textColor="@color/white"
                        android:textSize="@dimen/inicio_item_title">
                    </TextView>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_widthPercent="40%"
                        app:layout_heightPercent="40%"
                        android:src="@drawable/categorias"
                        android:layout_gravity="center"/>
                </com.example.elias.acervoapp.uiimplementacoes.FrameSquareLayout>
                <com.example.elias.acervoapp.uiimplementacoes.FrameSquareLayout
                    android:onClick="showAvisos"
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/d1"
                    android:background="@color/thirdGray">
                    <TextView
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/inicio_item_avisos"
                        android:textColor="@color/white"
                        android:textSize="@dimen/inicio_item_title">
                    </TextView>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_widthPercent="40%"
                        app:layout_heightPercent="40%"
                        android:src="@drawable/aviso"
                        android:layout_gravity="center"/>
                </com.example.elias.acervoapp.uiimplementacoes.FrameSquareLayout>
            </TableRow>
        </TableLayout>
        <RelativeLayout
            android:id="@+id/graficoCont"
            android:layout_below="@+id/options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:paddingTop="10dp"
                android:id="@+id/grafico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:layout_marginLeft="@dimen/d2"
                android:layout_marginRight="@dimen/d2"
                android:background="@color/firstGray">
                <com.example.elias.acervoapp.uiimplementacoes.GraficoPizza
                    android:id="@+id/pizza"
                    android:layout_width="@dimen/inicio_grafico_square"
                    app:centerColor="@color/firstGray"
                    app:raioInterno="@dimen/inicio_grafico_raio"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/inicio_grafico_square">
                    <com.example.elias.acervoapp.uiimplementacoes.GraficoSecao
                        android:id="@+id/livrosGuardados"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:secaoColor="@color/firstGreen"
                        app:qntNumber="0"/>
                    <com.example.elias.acervoapp.uiimplementacoes.GraficoSecao
                        android:id="@+id/livrosEmprestados"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:secaoColor="@color/firstRed"
                        app:qntNumber="0"/>

                </com.example.elias.acervoapp.uiimplementacoes.GraficoPizza>
                <TextView
                    android:id="@+id/qntLivros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0\nLivros"
                    android:textSize="@dimen/inicio_grafico_text"
                    android:textColor="@color/secWhite"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </FrameLayout>
            <LinearLayout
                android:layout_below="@+id/grafico"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_marginRight="@dimen/d2"
                android:layout_marginLeft="@dimen/d2"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginRight="@dimen/d1"
                    android:background="@color/thirdGray"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/b1"
                        android:id="@+id/colorOpt"
                        android:background="@color/firstGreen">
                    </FrameLayout>
                    <TextView
                        android:layout_below="@id/colorOpt"
                        android:id="@+id/guardados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guardados"
                        android:textSize="@dimen/H4"
                        android:textColor="@color/secWhite"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:id="@+id/guardadosPer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70%"
                        android:textColor="@color/secWhite"
                        android:layout_below="@id/guardados"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/H2"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/d1"
                    android:background="@color/thirdGray"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/b1"
                        android:id="@+id/colorOpt2"
                        android:background="@color/firstRed">
                    </FrameLayout>
                    <TextView
                        android:layout_below="@id/colorOpt2"
                        android:id="@+id/guardados2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emprestados"
                        android:textSize="@dimen/H4"
                        android:textColor="@color/secWhite"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:id="@+id/emprestadosPer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30%"
                        android:textColor="@color/secWhite"
                        android:layout_below="@id/guardados2"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/H2"/>
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
        <Button
            android:onClick="deslogarUsuario"
            android:text="DESLOGAR"
            android:textStyle="bold"
            android:textColor="@color/thirdGray"
            android:textSize="@dimen/H4"
            android:layout_marginTop="@dimen/d2"
            android:background="@drawable/iniciobutton"
            android:layout_marginLeft="@dimen/d2"
            android:layout_marginRight="@dimen/d2"
            android:layout_below="@+id/graficoCont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</ScrollView>
