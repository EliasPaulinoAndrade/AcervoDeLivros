<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elias.acervoapp.MainActivity"
    android:background="@color/secGray">

    <RelativeLayout
        android:id="@+id/tituloDiv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/firstBlue"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/numLivros"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="40"
                android:textSize="90dp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/imagelivros"
                android:layout_toRightOf="@+id/numLivros"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/pesquisaDiv"
        android:background="@color/firstGray"
        android:layout_below="@+id/tituloDiv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <TextView
            android:id="@+id/resultadoPesquisa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="40 RESULTADOS PARA LIVRO TAL"/>
        <Button
            android:layout_below="@+id/resultadoPesquisa"
            android:id="@+id/buscaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/busca2"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@color/firstBlue"/>
        <EditText
            android:layout_alignTop="@id/buscaButton"
            android:layout_alignBottom="@id/buscaButton"
            android:layout_toRightOf="@id/buscaButton"
            android:id="@+id/buscaEdit"
            android:layout_width="match_parent"
            android:hint="Faça Sua Busca..."
            android:textColor="@color/firstBlue"
            android:textColorHint="@color/firstBlue"
            android:textSize="15dp"
            android:background="@drawable/fundo_edit_blue"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:maxLines="1"
            android:inputType="text"
            android:ellipsize="end"
            android:paddingLeft="10dp"/>
        <Spinner
            android:layout_marginTop="5dp"
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buscaEdit"
            android:entries="@array/livrosCategorias"
            android:prompt="@string/padraoCategoria"
            android:background="@drawable/spinner_fundo">
        </Spinner>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/pesquisaDiv">
        <RelativeLayout
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:background="@color/firstGray"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgItem"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/circleimg"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/titleItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pre Arrival Guide For Exchange Stud..."
                android:textColor="@color/secWhite"
                android:textSize="20dp"
                android:layout_toRightOf="@id/imgItem"/>
            <TextView
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Students who will be a part of Koç University should read the Pre-Arrival Guide carefully."
                android:textColor="@color/firstBlue"
                android:layout_below="@id/titleItem"
                android:layout_toRightOf="@+id/imgItem"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
